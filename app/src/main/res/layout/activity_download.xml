<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".download">

    <TextView
        android:id="@+id/download_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FF0070"
        android:textSize="40dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/download_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41" />

    <ImageView
        android:id="@+id/download_image"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.249" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:background="@drawable/rounded_corner"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.812">

        <Space
            android:layout_width="30dp"
            android:layout_height="63dp" />

        <ImageButton
            android:id="@+id/share"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:background="#FFFB00"
            app:srcCompat="@drawable/baseline_ios_share_black_24dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <Space
            android:layout_width="63dp"
            android:layout_height="63dp" />

        <ImageButton
            android:id="@+id/save"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:background="#FFFB00"
            app:srcCompat="@drawable/baseline_downloading_black_24dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <Space
            android:layout_width="63dp"
            android:layout_height="63dp" />

        <ImageButton
            android:id="@+id/set"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:background="#FFFB00"
            app:srcCompat="@drawable/baseline_landscape_black_24dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <Space
            android:layout_width="10dp"
            android:layout_height="63dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>